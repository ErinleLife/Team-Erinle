<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <!--        <item name="android:statusBarColor">#00000000</item>-->
    </style>

    <style name="ShapeAppearance.Text" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">40dp</item>
        <item name="cornerSizeTopRight">40dp</item>
        <item name="cornerSizeBottomRight">40dp</item>
        <item name="cornerSizeBottomLeft">40dp</item>
    </style>

    <!--Bold font text view-->
    <style name="BoldTextViewExtraLarge" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/_22sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="BoldTextViewExtraLargest" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/_17ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="BoldTextViewLarge" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="BoldTextViewRegular" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="BoldTextViewMedium" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="BoldTextViewSmall" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="BoldTextViewExtraSmall" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="BoldTextViewSmallest" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textDirection">locale</item>
    </style>

    <!--progress bar-->
    <style name="GeneralLinearProgress" parent="android:Widget.ProgressBar.Small.Inverse">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorGray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="boxStrokeWidth">@dimen/_1sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_6sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_6sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_6sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_6sdp</item>
        <item name="colorControlNormal">@color/colorGray</item>
        <item name="colorControlActivated">@color/colorGray</item>
        <item name="hintTextColor">@color/black</item>
        <item name="hintEnabled">false</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:textColorHighlight">@color/colorGray</item>
        <item name="android:textColorLink">@color/colorGray</item>
    </style>

    <style name="TextInputLayoutEditTextTheme" parent="@android:style/Widget.EditText">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textDirection">locale</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>
    <style name="TextInputLayoutEditTextTheme1" parent="@android:style/Widget.EditText">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textDirection">locale</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSizeTopLeft">@dimen/_8sdp</item>
        <item name="cornerSizeTopRight">@dimen/_8sdp</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.CornerSize8Percent" parent="">
        <item name="cornerSize">@dimen/_8sdp</item>
    </style>


    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="behavior_peekHeight">@dimen/_500sdp</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

</resources>
