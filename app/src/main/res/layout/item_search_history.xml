        <!--            android:layout_height="match_parent"-->
        <!--            android:src="@drawable/ic_clear_white_24dp"-->
        <!--            android:tint="@color/gray"-->
        <!--            android:padding="7dp"/>-->

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

</LinearLayout>