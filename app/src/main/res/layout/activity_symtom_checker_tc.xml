<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="activity"
            type="com.arnav.pocdoc.symptomchecker.SymptomCheckerTCActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/header"
            layout="@layout/layout_header_back"
            app:activity="@{activity}" />

        <com.badoualy.stepperindicator.StepperIndicator
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:stpi_animDuration="2000"
            app:stpi_circleColor="@color/colorGray"
            app:stpi_circleRadius="@dimen/_6sdp"
            app:stpi_doneIconDrawable="@drawable/app_icon"
            app:stpi_indicatorColor="@color/colorPrimary"
            app:stpi_labelColor="@color/black"
            app:stpi_labels="@array/arrSymptomsChecker"
            app:stpi_lineColor="@color/colorGray"
            app:stpi_lineDoneColor="@color/black"
            app:stpi_showDoneIcon="true"
            app:stpi_showLabels="true"
            app:stpi_stepCount="6"
            app:stpi_useBottomIndicator="false" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/indicator">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:scaleType="fitEnd"
                    android:src="@drawable/ic_symtoms_tc"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTC"
                    style="@style/BoldTextViewExtraSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:drawablePadding="@dimen/_4sdp"
                    android:text="@string/terms_of_service"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ivLogo" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTCDesc"
                    style="@style/BoldTextViewExtraSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:drawablePadding="@dimen/_4sdp"
                    android:lineSpacingExtra="@dimen/_2sdp"
                    android:text="@string/terms_of_service_desc"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvTC" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivTCDesc1"
                    android:layout_width="@dimen/_6sdp"
                    android:layout_height="@dimen/_6sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:src="@drawable/bg_circle_black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvTCDesc1" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTCDesc1"
                    style="@style/BoldTextViewExtraSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:drawablePadding="@dimen/_4sdp"
                    android:lineSpacingExtra="@dimen/_2sdp"
                    android:text="@string/terms_of_service_desc1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ivTCDesc1"
                    app:layout_constraintTop_toBottomOf="@id/tvTCDesc" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivTCDesc2"
                    android:layout_width="@dimen/_6sdp"
                    android:layout_height="@dimen/_6sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:src="@drawable/bg_circle_black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvTCDesc2" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTCDesc2"
                    style="@style/BoldTextViewExtraSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:drawablePadding="@dimen/_4sdp"
                    android:lineSpacingExtra="@dimen/_2sdp"
                    android:text="@string/terms_of_service_desc2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ivTCDesc2"
                    app:layout_constraintTop_toBottomOf="@id/tvTCDesc1" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivTCDesc3"
                    android:layout_width="@dimen/_6sdp"
                    android:layout_height="@dimen/_6sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:src="@drawable/bg_circle_black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvTCDesc3" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTCDesc3"
                    style="@style/BoldTextViewExtraSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:drawablePadding="@dimen/_4sdp"
                    android:lineSpacingExtra="@dimen/_2sdp"
                    android:text="@string/terms_of_service_desc3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ivTCDesc3"
                    app:layout_constraintTop_toBottomOf="@id/tvTCDesc2" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/tvAgreeText"
                    style="@style/BoldTextViewExtraSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:button="@drawable/checkbox_selector"
                    android:paddingStart="@dimen/_6sdp"
                    android:paddingEnd="0dp"
                    android:text="@string/pp_desc"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvTCDesc3" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/tvAgreeHealth"
                    style="@style/BoldTextViewExtraSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:button="@drawable/checkbox_selector"
                    android:paddingStart="@dimen/_6sdp"
                    android:paddingEnd="0dp"
                    android:text="@string/health_desc"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvAgreeText" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:onClick="@{(v)->activity.onViewClick(v)}"
                    android:padding="@dimen/_8sdp"
                    android:paddingStart="@dimen/_60sdp"
                    android:paddingEnd="@dimen/_60sdp"
                    android:src="@color/colorPrimary"
                    android:text="@string/next"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"
                    app:cornerRadius="@dimen/_6sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvAgreeHealth" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>